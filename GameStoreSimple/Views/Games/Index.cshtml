@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.18/datatables.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#gamesTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    url: '/api/games'
                },
                "columns": [
                    { "data": "game_id" },
                    { "data": "name" },
                    { "data": "price" },
                    { "data": "genre_name" },
                ],
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10
            });
        });
    </script>
