@model IEnumerable<MVC.Models.Entities.Material_message>

@{
    ViewData["Title"] = "物资种类";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.18/datatables.min.css" />
}
<h2>物资种类</h2>
<p>
    <a asp-action="Index">仓库物资信息</a>
    <a asp-action="Create">新增物资种类</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table " id="gamesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaterialName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaterialName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MID">修改</a> |
                                    <a asp-action="Details" asp-route-id="@item.MID">详情</a> |
                                    <a asp-action="Delete" asp-route-id="@item.MID">删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
