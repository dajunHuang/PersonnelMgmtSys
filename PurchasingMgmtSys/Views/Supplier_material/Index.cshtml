@model IEnumerable<MVC.Models.Entities.Supplier_material>

@{
    ViewData["Title"] = "供方物资";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.18/datatables.min.css" />
}

    <h2>供方物资</h2>

    <p>
        <a asp-action="Create">新增供方物资</a>
    </p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table " id="gamesTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SID.FactoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MID.MaterialName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SID.FactoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MID.MaterialName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.NoteId">修改</a> |
                                <a asp-action="Delete" asp-route-id="@item.NoteId">删除</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

